

@{
    ViewData["Title"] = "Home Page";
}

@model List<CrudProject.Models.Product>


<link href="~/css/ProductShow.css" rel="stylesheet" asp-append-version="true" />

<div class="container" style=" margin-top: 5rem;background-color: #f8f9fa; padding: 2rem">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card product-card">
                    <!-- Display product image -->
                    <img src="~/images/@product.ImageFileName" class="card-img-top" alt="Product Image" />

                    <!-- Card Body -->
                    <div class="card-body">
                        <!-- Product Title -->
                        <h5 class="card-title product-title">@product.PName</h5>

                        <!-- Product Description -->
                        <p class="card-text text-muted description-snippet">@product.Description</p>

                        <!-- Product Price -->
                        <p class="price">₹@String.Format("{0:N2}",@product.Price)</p>

                        <a asp-controller="User" asp-action="ProductDetails" asp-route-id="@product.Id" class="btn btn-info btn-sm">More Details</a>
                        
                    </div>
                </div>
            </div>
        }
    </div>
</div>

