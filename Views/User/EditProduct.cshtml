@model CrudProject.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}
<div class="container" style=" margin-top: 5rem;">
<h2>Edit Product</h2>

<form asp-action="EditProduct" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" asp-for="PName" />
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>

    <div class="row mb-3">
        <label>Email</label>
        <input type="text" class="form-control" asp-for="Email" />
       
    </div>

    <div class="row mb-3">
        <label>Mobile Number</label>
        <input type="number" class="form-control" asp-for="MobileNumber" />
       
    </div>

    <div class="form-group">
        <label>Price</label>
        <input type="number" class="form-control" asp-for="Price" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="MyProducts" class="btn btn-secondary">Cancel</a>
</form>
</div>